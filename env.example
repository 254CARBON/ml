# Environment
ML_ENV=local

# MLflow Configuration
ML_MLFLOW_BACKEND_DSN=postgresql://mlflow:mlflow_password@localhost:5432/mlflow
ML_MLFLOW_ARTIFACT_URI=s3://mlflow-artifacts
ML_MINIO_ENDPOINT=http://localhost:9000
ML_MINIO_ACCESS_KEY=minioadmin
ML_MINIO_SECRET_KEY=minioadmin123

# Database Configuration
ML_VECTOR_DB_DSN=postgresql://mlflow:mlflow_password@localhost:5432/mlflow
ML_REDIS_URL=redis://localhost:6379

# Model Configuration
ML_MODEL_DEFAULT_NAME=curve_forecaster
ML_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
ML_MAX_BATCH_SIZE=256

# Service URLs
ML_MLFLOW_TRACKING_URI=http://localhost:5000
ML_EMBEDDING_SERVICE_URL=http://localhost:9006
ML_SEARCH_SERVICE_URL=http://localhost:9007

# Queue Configuration
ML_INGEST_QUEUE=embeddings_rebuild

# Observability
ML_TRACING_ENABLED=true
ML_OTEL_EXPORTER=http://localhost:14268/api/traces
ML_OTEL_SERVICE_NAME=ml-platform

# Performance
ML_GPU_PREFERENCE=auto
ML_MODEL_SERVING_PORT=9005
ML_EMBEDDING_PORT=9006
ML_SEARCH_PORT=9007

# Security
ML_JWT_SECRET_KEY=your-secret-key-here
ML_JWT_ALGORITHM=HS256
ML_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
ML_LOG_LEVEL=INFO
ML_LOG_FORMAT=json

